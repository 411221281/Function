//  參考https://tw.gitbook.net/c_standard_library/c_function_localtime.html  //
//  輸出當地時間  //

#include <stdio.h>
#include <time.h>

int main () {

   time_t rawtime;
   struct tm *info;
   char buffer[80];

   time( &rawtime );

   info = localtime( &rawtime );    //  localtime() 所指出的時間由定時器表示相應的本地時區所屬時刻。  //
   printf("Current local time and date: %s", asctime(info));  //  輸出"星期 月 日 十 分 秒 年"的格式  //

   return 0;
}
